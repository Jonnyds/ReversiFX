<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<HBox fx:id="root" spacing="10" xmlns="http://javafx.com/javafx/8.0.0"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ReversiController">
        <children>
                <GridPane fx:id="GRID">
                        <children>
                                <Label GridPane.columnIndex="0" g text="Current Player: "/>

                                <Button id="endGameButton" text="End Game" onMouseClicked="#endGameEvent"
                                >End Game</Button>
                        </children>
                </GridPane>
        </children>
</HBox>